@{
}
@model MovieRec // This is the model I want to use in this view.
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>One last page with a form to enter movies</title>
</head>
<body>
    <h1>One last page with a form to enter movies</h1>
    <form method="post">
        <label asp-for="Category">Category:</label>
        <br>
        <input type="text" asp-for="Category" id="Category" name="Category" required>
        <br>
        <label asp-for="Title">Title:</label>
        <br>
        <input type="text" asp-for="Title" id="Title" name="Title" required>
        <br>
        <label asp-for="Year">Year:</label>
        <br>
        <input type="number" asp-for="Year" id="Year" name="Year" required>
        <br>
        <label asp-for="Director">Director:</label>
        <br>
        <input type="text" asp-for="Director" id="Director" name="Director" required>
        <br>
        <label asp-for="Rating">Rating:</label>
        <br>
        <select asp-for="Rating" id="Rating" name="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br>
        <label asp-for="Edited">Edited:</label>
        <br>
        <input type="radio" asp-for="Edited" id="Edited_yes" name="Edited" value="false">
        <label asp-for="Edited" for="Edited_yes">Yes</label>
        <input type="radio" asp-for="Edited" id="Edited_no" name="Edited" value="true">
        <label asp-for="Edited" for="Edited_no">No</label>
        <br>
        <label asp-for="LentTo">Lent To:</label>
        <br>
        <input type="text" asp-for="LentTo" id="Lent_to" name="Lent_to">
        <br>
        <label asp-for="Notes">Notes:</label>
        <br>
        <input type="text" asp-for="Notes" id="Notes" name="Notes" maxlength="25">
        <br>
        <button type="submit">Submit</button>
    </form>
</body>
</html>
